@using System.Text.Json

@model IEnumerable<Course>;

<style>
    .shadow {
        box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px;
    }

    .round {
        border: 1px solid #d3d3d3;
        border-radius: 15px;
    }

    .courses-action {
        margin-bottom: 100px;
    }

    .courses-create-form {
        width: 500px;
        padding: 30px;
    }

    .main-header {
        margin-bottom: 50px;
    }

    .list-item {
        padding: 30px;
        margin-bottom: 50px;
        font-size: 18px;
    }

    .list-item: :last-child {
        margin-bottom: 0px;
    }

    .item-name {
        margin-bottom: 15px;
    }

    .item-desc {
        margin-bottom: 50px;
    }

    .item-lect-amount, .item-date {
        color: #505050;
    }

    .courses-create-form {
        padding: 25px;
    }

</style>

<div>
    <div class="courses-action"> 
        <div class="main-header">
                <h1>Create course</h1>
        </div>

        <div class="courses-create-form round">
            <form action="/Course" method="post">
                <div class="form-item mb-4">
                    <div class="item-label">
                        <label class="h5 mb-2 text-dark">Name:</label>
                    </div>
                    <input class="form-control" type="text" name="Name" required maxlength="100">
                </div>

                <div class="form-item mb-4">
                    <div class="item-label">
                        <label class="h5 mb-2 text-dark">Description:</label>
                    </div>
                    <input class="form-control" type="text" name="Description" required maxlength="500">
                </div>

                <div class="form-item mb-4">
                    <div class="item-label">
                        <label class="h5 mb-2 text-dark">Amount of lectures:</label>
                    </div>
                    <input class="form-control" type="number" name="AmountOfLectures" required min="1">
                </div>

                <button class="form-btn btn btn-dark px-4 btn-lg">Create</button>
            </form>
        </div>
    </div>
    
    <div class="courses-info">
        <div class="main-header">
            <h1>All courses</h1>
        </div>

        <div class="courses-list">
            @foreach (var course in Model)
            {
                <div class="list-item round">
                    <div class="item-name">
                        <h3>@(course?.Name)</h3>
                    </div>
                    <div class="item-desc">
                        @(course?.Description)
                    </div>
                    <div class="item-lect-amount">
                        Amount of lectures: @(course?.AmountOfLectures ?? 0)
                    </div>
                    <div class="item-date mb-4">
                        @(course?.CreationDate.ToString() ?? "UNKNOWN")
                    </div>

                    <a href="/Feedback/@(course?.Id)" class="btn btn-secondary btn-dark active item-button px-4" role="button" aria-pressed="true">Feedbacks</a>
                </div>
            }
        </div>
    </div>
</div>