@using System.Text.Json
@using Microsoft.AspNetCore.Mvc.ModelBinding

@model IEnumerable<Course>;

@{
    var courses = @Model;
}

<style>
    .shadow {
        box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px;
    }

    .round {
        border: 1px solid #d3d3d3;
        border-radius: 15px;
    }

    .courses-action {
        margin-bottom: 100px;
    }

    .courses-create-form {
        width: 500px;
        padding: 30px;
    }

    .main-header {
        margin-bottom: 50px;
    }

    .list-item {
        padding: 30px;
        margin-bottom: 50px;
        font-size: 18px;
    }

    .list-item: :last-child {
        margin-bottom: 0px;
    }

    .item-name {
        margin-bottom: 15px;
    }

    .item-desc {
        margin-bottom: 50px;
    }

    .item-lect-amount, .item-date {
        color: #505050;
    }

    .courses-create-form {
        padding: 25px;
    }

</style>

<div>
    <div class="page-functionality">
        <a class="btn btn-dark px-3 btn-lg" asp-route="CourseCreateView">Create Course</a>
    </div>
    <hr>
    <div class="courses-info">
        <div class="main-header">
            <h1>All courses</h1>
        </div>

        <div class="courses-list">
            @foreach (var course in courses)
            {
                <div class="list-item round">
                    <div class="item-name">
                        <h3>@(course?.Name)</h3>
                    </div>
                    <div class="item-desc">
                        @(course?.Description)
                    </div>
                    <div class="item-lect-amount">
                        Amount of lectures: @(course?.AmountOfLectures ?? 0)
                    </div>
                    <div class="item-date mb-4">
                        @(course?.CreationDate.ToString() ?? "UNKNOWN")
                    </div>

                    <div>
                        <img src="@course?.CourseLogoPath" />
                    </div>

                    <a href="/Feedback/@(course?.Id)" class="btn btn-secondary btn-dark active item-button px-4" role="button" aria-pressed="true">Feedbacks</a>
                </div>
            }
        </div>
    </div>
</div>