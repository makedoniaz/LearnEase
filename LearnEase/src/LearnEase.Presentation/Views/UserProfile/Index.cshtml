@model User;

@{
    var user = @Model;
}

<div class="main">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">User Profile</h3>
                    </div>
                    <div class="card-body">

                        <div class="avatar-wrapper">
                            <img width="100" height="100" src="Identity/Avatar/@user.Id" alt="Avatar" class="rounded-circle" id="avatarImage">
                        </div>
                        
                        <form method="post" asp-route="SetAvatar" asp-route-userId="@user.Id" enctype="multipart/form-data" class="ml-3">
                            <label class="btn btn-primary">
                                Change
                                <input type="file" name="Avatar" id="avatarInput" hidden>
                            </label>
                            <button type="submit" class="btn btn-success ml-2">Save</button>
                        </form>

                        <div class="form-group">
                            <label for="userName">Username:</label>
                            <input id="userName" class="form-control" value="@user.UserName" readonly />
                        </div>
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input id="email" class="form-control" value="@user.Email" readonly />
                        </div>
                        

                    </div>
                </div>
            </div>
        </div>
    </div>

    
</div>